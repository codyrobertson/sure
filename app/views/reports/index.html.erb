<% content_for :head do %>
  <style media="print">
    /* Print-specific custom property overrides for values using --alpha() */
    :root {
      --print-shadow-color: rgba(11, 11, 11, 0.06);
    }

    @page {
      margin: 0.75in;
    }

    body {
      background: var(--color-gray-50);
      color: var(--color-gray-900);
      font-family: var(--font-sans);
    }

    #notification-tray,
    #cta,
    #chat-container,
    turbo-frame#modal,
    turbo-frame#drawer,
    [data-print="hide"] {
      display: none !important;
    }

    [data-controller="app-layout"] {
      height: auto !important;
      overflow: visible !important;
      display: block !important;
    }

    [data-app-layout-target="content"] {
      max-width: none !important;
      max-height: none !important;
      height: auto !important;
      padding: 0 !important;
      margin: 0 !important;
      overflow: visible !important;
    }

    body,
    html {
      height: auto !important;
      overflow: visible !important;
    }

    main {
      overflow: visible !important;
      height: auto !important;
      max-height: none !important;
    }

    [data-app-layout-target="content"] > .hidden.lg\:flex {
      display: none !important;
    }

    .reports-page {
      background: transparent;
      padding: 0 !important;
    }

    .reports-print-sheet {
      background: var(--color-white);
      border-radius: 16px;
      padding: 0.75in 0.65in;
      box-shadow: 0 10px 25px var(--print-shadow-color);
    }

    .reports-page section {
      break-inside: avoid;
      page-break-inside: avoid;
    }

    .reports-print-hide,
    [data-reports-section-target="button"],
    [data-reports-sortable-target="handle"] {
      display: none !important;
    }

    [data-reports-section-target="content"] {
      display: block !important;
    }

    section[data-section-key="transactions_breakdown"] {
      break-before: page;
      page-break-before: always;
      margin-top: 0 !important;
      padding-top: 0 !important;
    }

    .reports-page table th,
    .reports-page table td {
      padding-inline: 0.5rem !important;
    }
  </style>
<% end %>

<% content_for :page_header do %>
  <div class="space-y-4 mb-6 reports-print-hide">
    <div class="space-y-1">
      <h1 class="text-xl lg:text-3xl font-medium text-primary">
        <%= t("reports.index.title") %>
      </h1>
      <p class="text-sm lg:text-base text-secondary">
        <%= t("reports.index.subtitle") %>
      </p>
    </div>

    <%# Flash messages %>
    <% if flash[:alert].present? %>
      <div class="p-3 rounded-lg bg-destructive-surface text-sm text-destructive">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%# Period Navigation Tabs %>
    <div class="reports-print-hide flex items-center gap-2 overflow-x-auto pb-2">
      <%= render DS::Link.new(
        text: t("reports.index.periods.monthly"),
        variant: @period_type == :monthly ? "secondary" : "ghost",
        href: reports_path(period_type: :monthly),
        size: :sm
      ) %>
      <%= render DS::Link.new(
        text: t("reports.index.periods.quarterly"),
        variant: @period_type == :quarterly ? "secondary" : "ghost",
        href: reports_path(period_type: :quarterly),
        size: :sm
      ) %>
      <%= render DS::Link.new(
        text: t("reports.index.periods.ytd"),
        variant: @period_type == :ytd ? "secondary" : "ghost",
        href: reports_path(period_type: :ytd),
        size: :sm
      ) %>
      <%= render DS::Link.new(
        text: t("reports.index.periods.last_6_months"),
        variant: @period_type == :last_6_months ? "secondary" : "ghost",
        href: reports_path(period_type: :last_6_months),
        size: :sm
      ) %>
      <%= render DS::Link.new(
        text: t("reports.index.periods.custom"),
        variant: @period_type == :custom ? "secondary" : "ghost",
        href: reports_path(period_type: :custom),
        size: :sm
      ) %>
    </div>

    <%# Custom Date Range Picker (only shown when custom is selected) %>
    <% if @period_type == :custom %>
      <%= form_with url: reports_path, method: :get, data: { controller: "auto-submit-form" }, class: "reports-print-hide flex items-center gap-3 bg-surface-inset p-3 rounded-lg" do |f| %>
        <%= f.hidden_field :period_type, value: :custom %>

        <div class="flex items-center gap-2">
          <label class="text-sm font-medium text-secondary"><%= t("reports.index.date_range.from") %></label>
          <%= f.date_field :start_date,
                           value: @start_date.strftime("%Y-%m-%d"),
                           data: { auto_submit_form_target: "auto" },
                           autocomplete: "off",
                           class: "px-3 py-1.5 border border-primary rounded-lg text-sm bg-container-inset text-primary" %>
        </div>
        <span class="text-secondary">â€”</span>
        <div class="flex items-center gap-2">
          <label class="text-sm font-medium text-secondary"><%= t("reports.index.date_range.to") %></label>
          <%= f.date_field :end_date,
                           value: @end_date.strftime("%Y-%m-%d"),
                           data: { auto_submit_form_target: "auto" },
                           autocomplete: "off",
                           class: "px-3 py-1.5 border border-primary rounded-lg text-sm bg-container-inset text-primary" %>
        </div>
      <% end %>
    <% end %>

    <%# Period Display %>
    <div class="text-sm text-secondary">
      <%= t("reports.index.showing_period",
            start: @start_date.strftime("%b %-d, %Y"),
            end: @end_date.strftime("%b %-d, %Y")) %>
    </div>
  </div>
<% end %>

<div class="reports-page w-full space-y-6 pb-24 reports-print-sheet">
  <% if Current.family.transactions.any? %>
    <%# Summary Dashboard - Always visible, not collapsible %>
    <section>
      <%= render partial: "reports/summary_dashboard", locals: {
        metrics: @summary_metrics,
        period_type: @period_type
      } %>
    </section>

    <%# Insights Section with Tabs - No heavy container, clean flow %>
    <section class="mt-8">
      <%= render DS::Tabs.new(active_tab: params[:insights_tab].presence || "overview", url_param_key: "insights_tab") do |tabs| %>
        <% tabs.with_nav(classes: "flex gap-1 border-b border-secondary/30 overflow-x-auto") do |nav| %>
          <% nav.with_btn(id: "overview", label: t("reports.insights.tabs.overview"), classes: "whitespace-nowrap px-4 py-2.5 text-sm font-medium border-b-2 -mb-px transition-colors") %>
          <% nav.with_btn(id: "spending", label: t("reports.insights.tabs.spending"), classes: "whitespace-nowrap px-4 py-2.5 text-sm font-medium border-b-2 -mb-px transition-colors") %>
          <% nav.with_btn(id: "savings_debt", label: t("reports.insights.tabs.savings_debt"), classes: "whitespace-nowrap px-4 py-2.5 text-sm font-medium border-b-2 -mb-px transition-colors") %>
          <% nav.with_btn(id: "optimize", label: t("reports.insights.tabs.optimize"), classes: "whitespace-nowrap px-4 py-2.5 text-sm font-medium border-b-2 -mb-px transition-colors") %>
        <% end %>

        <% tabs.with_panel(tab_id: "overview") do %>
          <div class="py-6">
            <%= render partial: "reports/insights/tab_overview", locals: { cash_flow: @cash_flow_analysis } %>
          </div>
        <% end %>

        <% tabs.with_panel(tab_id: "spending") do %>
          <div class="py-6">
            <%= render partial: "reports/insights/tab_spending", locals: {
              anomalies: @insights[:anomalies],
              merchants: @insights[:merchant_intelligence]
            } %>
          </div>
        <% end %>

        <% tabs.with_panel(tab_id: "savings_debt") do %>
          <div class="py-6">
            <%= render partial: "reports/insights/tab_savings_debt", locals: {
              savings_rate: @insights[:savings_rate],
              debt_payoff: @insights[:debt_payoff]
            } %>
          </div>
        <% end %>

        <% tabs.with_panel(tab_id: "optimize") do %>
          <div class="py-6">
            <%= render partial: "reports/insights/tab_optimize", locals: {
              recurring_costs: @insights[:recurring_costs],
              cash_flow_timing: @insights[:cash_flow_timing],
              what_if: @insights[:what_if]
            } %>
          </div>
        <% end %>
      <% end %>
    </section>

    <%# Trends Section - Collapsible with clean styling %>
    <% if @trends_data.present? %>
      <section class="mt-8"
               data-controller="reports-section"
               data-reports-section-section-key-value="trends_insights"
               data-reports-section-collapsed-value="<%= Current.user.reports_section_collapsed?("trends_insights") %>">
        <details open class="group">
          <summary class="flex items-center gap-2 cursor-pointer list-none py-3 border-b border-secondary/30"
                   data-action="click->reports-section#toggle">
            <%= icon("chevron-down", size: "sm", class: "text-secondary transition-transform group-open:rotate-0 -rotate-90", data: { reports_section_target: "chevron" }) %>
            <h2 class="text-base font-medium text-primary">
              <%= t("reports.trends.title") %>
            </h2>
          </summary>
          <div class="py-6" data-reports-section-target="content">
            <%= render partial: "reports/trends_insights", locals: { trends_data: @trends_data, spending_patterns: @spending_patterns } %>
          </div>
        </details>
      </section>
    <% end %>

    <%# Transactions Breakdown Section - Collapsible with clean styling %>
    <% if @transactions.present? %>
      <section class="mt-8"
               data-controller="reports-section"
               data-reports-section-section-key-value="transactions_breakdown"
               data-reports-section-collapsed-value="<%= Current.user.reports_section_collapsed?("transactions_breakdown") %>">
        <details open class="group">
          <summary class="flex items-center gap-2 cursor-pointer list-none py-3 border-b border-secondary/30"
                   data-action="click->reports-section#toggle">
            <%= icon("chevron-down", size: "sm", class: "text-secondary transition-transform group-open:rotate-0 -rotate-90", data: { reports_section_target: "chevron" }) %>
            <h2 class="text-base font-medium text-primary">
              <%= t("reports.transactions_breakdown.title") %>
            </h2>
          </summary>
          <div class="py-6" data-reports-section-target="content">
            <%= render partial: "reports/transactions_breakdown", locals: {
              transactions: @transactions,
              period_type: @period_type,
              start_date: @start_date,
              end_date: @end_date
            } %>
          </div>
        </details>
      </section>
    <% end %>
  <% else %>
    <%# Empty State %>
    <section>
      <%= render partial: "reports/empty_state" %>
    </section>
  <% end %>
</div>
