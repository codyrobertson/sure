<% return unless data.present? %>

<div class="space-y-8">
  <%# Top Merchants - Simple list with bars %>
  <% if data[:top_merchants].any? %>
    <div>
      <p class="text-sm text-secondary mb-4"><%= t("reports.insights.merchant_intelligence.top_merchants") %></p>

      <% max_amount = data[:top_merchants].first[:total_spent][:amount] %>

      <div class="space-y-3">
        <% data[:top_merchants].each_with_index do |merchant, index| %>
          <% bar_width = (merchant[:total_spent][:amount] / max_amount * 100).round %>

          <div class="relative">
            <div class="absolute inset-0 bg-primary/5 rounded" style="width: <%= bar_width %>%;"></div>
            <div class="relative flex items-center justify-between py-2 px-3">
              <div class="flex items-center gap-3">
                <span class="w-5 h-5 flex items-center justify-center text-xs font-medium text-secondary">
                  <%= index + 1 %>
                </span>
                <div>
                  <span class="font-medium text-primary"><%= merchant[:merchant][:name] %></span>
                  <% if merchant[:trend] == :up %>
                    <span class="text-xs text-destructive ml-2">↑ <%= merchant[:trend_percent] %>%</span>
                  <% elsif merchant[:trend] == :down %>
                    <span class="text-xs text-success ml-2">↓ <%= merchant[:trend_percent] %>%</span>
                  <% end %>
                </div>
              </div>
              <div class="text-right">
                <span class="font-semibold text-primary"><%= merchant[:total_spent][:formatted] %></span>
                <span class="text-xs text-tertiary ml-2">
                  <%= merchant[:transaction_count] %> txns
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# New Merchants %>
  <% if data[:new_merchants].any? %>
    <div>
      <p class="text-sm text-secondary mb-3"><%= t("reports.insights.merchant_intelligence.new_merchants") %></p>

      <div class="flex flex-wrap gap-2">
        <% data[:new_merchants].each do |merchant| %>
          <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-success/10 rounded-full text-sm">
            <span class="text-xs text-success font-medium"><%= t("reports.insights.merchant_intelligence.new_badge") %></span>
            <span class="text-primary"><%= merchant[:merchant][:name] %></span>
            <span class="text-secondary"><%= merchant[:total_spent][:formatted] %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Frequency Leaders %>
  <% if data[:frequency_leaders].any? %>
    <div>
      <p class="text-sm text-secondary mb-3"><%= t("reports.insights.merchant_intelligence.frequent_visits") %></p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <% data[:frequency_leaders].each do |merchant| %>
          <div class="flex items-center justify-between">
            <span class="text-sm text-primary"><%= merchant[:merchant][:name] %></span>
            <span class="text-sm font-medium text-primary">
              <%= merchant[:visits_this_period] %> visits
            </span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Category Breakdown %>
  <% if data[:category_breakdown].any? %>
    <div>
      <p class="text-sm text-secondary mb-3"><%= t("reports.insights.merchant_intelligence.by_category") %></p>

      <div class="space-y-4">
        <% data[:category_breakdown].each do |category| %>
          <div>
            <div class="flex items-center justify-between mb-1">
              <span class="text-sm font-medium text-primary"><%= category[:category] %></span>
              <span class="text-sm text-secondary"><%= category[:total][:formatted] %></span>
            </div>
            <div class="flex flex-wrap gap-1">
              <% category[:top_merchants].each do |merchant| %>
                <span class="text-xs px-2 py-0.5 bg-secondary/10 rounded text-secondary">
                  <%= merchant[:name] %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Insights %>
  <% if data[:insights].present? %>
    <div class="space-y-2 pt-4 border-t border-secondary/20">
      <% data[:insights].each do |insight| %>
        <% colors = { positive: "text-success", warning: "text-warning", alert: "text-destructive" } %>
        <% icons = { positive: "check-circle", warning: "alert-triangle", alert: "alert-circle" } %>

        <div class="flex items-start gap-2 text-sm">
          <%= icon(icons[insight[:severity]] || "info", class: "w-4 h-4 mt-0.5 flex-shrink-0 #{colors[insight[:severity]] || 'text-secondary'}") %>
          <p class="text-primary"><%= insight[:message] %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
