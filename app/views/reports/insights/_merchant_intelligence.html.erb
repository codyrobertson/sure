<% return unless data.present? %>

<div class="space-y-6">
  <%# Top Merchants Card %>
  <% if data[:top_merchants].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <p class="text-sm font-medium text-primary mb-4"><%= t("reports.insights.merchant_intelligence.top_merchants") %></p>

      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-secondary/30">
              <th class="text-left py-2 text-xs text-subdued font-medium">#</th>
              <th class="text-left py-2 text-xs text-subdued font-medium">Merchant</th>
              <th class="text-right py-2 text-xs text-subdued font-medium">Transactions</th>
              <th class="text-right py-2 text-xs text-subdued font-medium">Avg</th>
              <th class="text-right py-2 text-xs text-subdued font-medium">Total</th>
            </tr>
          </thead>
          <tbody>
            <% data[:top_merchants].each_with_index do |merchant, index| %>
              <tr class="border-b border-secondary/20 last:border-0">
                <td class="py-2.5 text-subdued w-8"><%= index + 1 %></td>
                <td class="py-2.5">
                  <div class="flex items-center gap-2">
                    <span class="font-medium text-primary"><%= merchant[:merchant][:name] %></span>
                    <% if merchant[:trend] == :up %>
                      <span class="text-xs text-destructive">↑ <%= merchant[:trend_percent] %>%</span>
                    <% elsif merchant[:trend] == :down %>
                      <span class="text-xs text-success">↓ <%= merchant[:trend_percent] %>%</span>
                    <% end %>
                  </div>
                </td>
                <td class="py-2.5 text-right text-subdued"><%= merchant[:transaction_count] %></td>
                <td class="py-2.5 text-right text-subdued"><%= merchant[:avg_transaction][:formatted] %></td>
                <td class="py-2.5 text-right font-semibold text-primary"><%= merchant[:total_spent][:formatted] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <%# New Merchants Card %>
  <% if data[:new_merchants].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <p class="text-sm font-medium text-primary mb-4"><%= t("reports.insights.merchant_intelligence.new_merchants") %></p>

      <div class="flex flex-wrap gap-2">
        <% data[:new_merchants].each do |merchant| %>
          <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-success/10 border border-success/30 rounded-lg text-sm">
            <span class="text-xs text-success font-medium"><%= t("reports.insights.merchant_intelligence.new_badge") %></span>
            <span class="text-primary"><%= merchant[:merchant][:name] %></span>
            <span class="text-secondary"><%= merchant[:total_spent][:formatted] %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Frequency Leaders Card %>
  <% if data[:frequency_leaders].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <p class="text-sm font-medium text-primary mb-4"><%= t("reports.insights.merchant_intelligence.frequent_visits") %></p>

      <table class="w-full text-sm">
        <tbody>
          <% data[:frequency_leaders].each do |merchant| %>
            <tr class="border-b border-secondary/20 last:border-0">
              <td class="py-2.5 font-medium text-primary"><%= merchant[:merchant][:name] %></td>
              <td class="py-2.5 text-right text-primary">
                <%= merchant[:visits_this_period] %> <%= t("reports.insights.merchant_intelligence.visits_label") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <%# Category Breakdown Card %>
  <% if data[:category_breakdown].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <p class="text-sm font-medium text-primary mb-4"><%= t("reports.insights.merchant_intelligence.by_category") %></p>

      <div class="space-y-4">
        <% data[:category_breakdown].each do |category| %>
          <div class="border-b border-secondary/20 pb-4 last:border-0 last:pb-0">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-primary"><%= category[:category] %></span>
              <span class="text-sm text-secondary"><%= category[:total][:formatted] %></span>
            </div>
            <div class="flex flex-wrap gap-1">
              <% category[:top_merchants].each do |merchant| %>
                <span class="text-xs px-2 py-0.5 bg-secondary/10 rounded text-secondary">
                  <%= merchant[:name] %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Insights %>
  <% if data[:insights].present? %>
    <div class="space-y-2">
      <% data[:insights].each do |insight| %>
        <% colors = { positive: "text-success", warning: "text-warning", alert: "text-destructive" } %>
        <% icons = { positive: "check-circle", warning: "alert-triangle", alert: "alert-circle" } %>

        <div class="flex items-start gap-2 text-sm">
          <%= icon(icons[insight[:severity]] || "info", class: "w-4 h-4 mt-0.5 flex-shrink-0 #{colors[insight[:severity]] || 'text-secondary'}") %>
          <p class="text-primary"><%= insight[:message] %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
