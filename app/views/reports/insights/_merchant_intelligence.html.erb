<% return unless data.present? %>

<div class="space-y-6">
  <%# Top Merchants %>
  <% if data[:top_merchants].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <h4 class="text-sm font-medium text-secondary mb-4">
        <%= t("reports.insights.merchant_intelligence.top_merchants") %>
      </h4>

      <div class="space-y-3">
        <% max_amount = data[:top_merchants].first[:total_spent][:amount] %>

        <% data[:top_merchants].each_with_index do |merchant, index| %>
          <div class="group relative">
            <%# Bar background %>
            <% bar_width = (merchant[:total_spent][:amount] / max_amount * 100).round %>

            <div class="flex items-center gap-4 p-3 bg-container rounded-lg relative overflow-hidden">
              <%# Background bar %>
              <div class="absolute inset-0 bg-primary/10 transition-all"
                   style="width: <%= bar_width %>%;"></div>

              <%# Content %>
              <div class="relative flex items-center gap-4 flex-1">
                <%# Rank %>
                <span class="w-6 h-6 flex items-center justify-center bg-container rounded-full text-xs font-medium text-secondary">
                  <%= index + 1 %>
                </span>

                <%# Merchant info %>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2">
                    <span class="font-medium text-primary truncate"><%= merchant[:merchant][:name] %></span>

                    <%# Trend indicator %>
                    <% if merchant[:trend] == :up %>
                      <span class="flex items-center gap-0.5 text-xs text-destructive">
                        <%= icon("trending-up", class: "w-3 h-3") %>
                        +<%= merchant[:trend_percent] %>%
                      </span>
                    <% elsif merchant[:trend] == :down %>
                      <span class="flex items-center gap-0.5 text-xs text-success">
                        <%= icon("trending-down", class: "w-3 h-3") %>
                        -<%= merchant[:trend_percent] %>%
                      </span>
                    <% end %>
                  </div>

                  <div class="flex items-center gap-3 text-xs text-tertiary">
                    <span><%= merchant[:transaction_count] %> <%= t("reports.insights.merchant_intelligence.transactions") %></span>
                    <span>&middot;</span>
                    <span><%= t("reports.insights.merchant_intelligence.avg") %> <%= merchant[:avg_transaction][:formatted] %></span>
                  </div>
                </div>

                <%# Amount %>
                <span class="font-semibold text-primary"><%= merchant[:total_spent][:formatted] %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# New Merchants %>
  <% if data[:new_merchants].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <div class="flex items-center gap-2 mb-4">
        <%= icon("sparkles", class: "w-5 h-5 text-primary") %>
        <h4 class="text-sm font-medium text-secondary">
          <%= t("reports.insights.merchant_intelligence.new_merchants") %>
        </h4>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <% data[:new_merchants].each do |merchant| %>
          <div class="flex items-center justify-between p-3 bg-container rounded-lg">
            <div class="flex items-center gap-2">
              <span class="text-xs px-1.5 py-0.5 bg-success/20 text-success rounded font-medium">
                <%= t("reports.insights.merchant_intelligence.new_badge") %>
              </span>
              <span class="text-sm font-medium text-primary truncate max-w-32">
                <%= merchant[:merchant][:name] %>
              </span>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium text-primary"><%= merchant[:total_spent][:formatted] %></p>
              <p class="text-xs text-tertiary">
                <%= merchant[:transaction_count] %> <%= t("reports.insights.merchant_intelligence.visits") %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Frequency Leaders %>
  <% if data[:frequency_leaders].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <div class="flex items-center gap-2 mb-4">
        <%= icon("repeat", class: "w-5 h-5 text-primary") %>
        <h4 class="text-sm font-medium text-secondary">
          <%= t("reports.insights.merchant_intelligence.frequent_visits") %>
        </h4>
      </div>

      <div class="space-y-3">
        <% data[:frequency_leaders].each do |merchant| %>
          <div class="flex items-center justify-between p-3 border border-secondary rounded-lg">
            <div>
              <p class="font-medium text-primary"><%= merchant[:merchant][:name] %></p>
              <p class="text-xs text-tertiary">
                <%= t("reports.insights.merchant_intelligence.visits_per_month", count: merchant[:avg_per_month]) %>
              </p>
            </div>
            <div class="text-right">
              <p class="text-lg font-semibold text-primary"><%= merchant[:visits_this_period] %></p>
              <p class="text-xs text-tertiary"><%= t("reports.insights.merchant_intelligence.visits_label") %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Category Breakdown %>
  <% if data[:category_breakdown].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <h4 class="text-sm font-medium text-secondary mb-4">
        <%= t("reports.insights.merchant_intelligence.by_category") %>
      </h4>

      <div class="space-y-4">
        <% data[:category_breakdown].each do |category| %>
          <div class="border-b border-secondary/50 pb-3 last:border-0 last:pb-0">
            <div class="flex items-center justify-between mb-2">
              <span class="font-medium text-primary"><%= category[:category] %></span>
              <span class="text-sm text-secondary"><%= category[:total][:formatted] %></span>
            </div>

            <div class="flex flex-wrap gap-2">
              <% category[:top_merchants].each do |merchant| %>
                <div class="text-xs px-2 py-1 bg-container rounded-full text-secondary">
                  <%= merchant[:name] %> (<%= merchant[:total][:formatted] %>)
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Insights %>
  <% if data[:insights].present? %>
    <div class="space-y-2">
      <% data[:insights].each do |insight| %>
        <% bg_class = case insight[:severity]
          when :positive then "bg-success/10 border-success/30"
          when :warning then "bg-warning/10 border-warning/30"
          when :alert then "bg-destructive/10 border-destructive/30"
          else "bg-surface-inset border-secondary"
        end %>
        <% icon_class = case insight[:severity]
          when :positive then "text-success"
          when :warning then "text-warning"
          when :alert then "text-destructive"
          else "text-secondary"
        end %>
        <% icon_name = case insight[:severity]
          when :positive then "check-circle"
          when :warning then "alert-triangle"
          when :alert then "alert-circle"
          else "info"
        end %>

        <div class="flex items-start gap-3 p-3 rounded-lg border <%= bg_class %>">
          <%= icon(icon_name, class: "w-5 h-5 mt-0.5 #{icon_class}") %>
          <p class="text-sm text-primary"><%= insight[:message] %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
