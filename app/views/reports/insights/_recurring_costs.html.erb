<% return unless data.present? %>

<div class="space-y-6">
  <%# Summary Stats %>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.monthly_total") %></p>
      <p class="text-2xl font-semibold text-primary">
        <%= data[:monthly_total][:formatted] %>
      </p>
    </div>

    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.annual_total") %></p>
      <p class="text-2xl font-semibold text-secondary">
        <%= data[:annual_total][:formatted] %>
      </p>
    </div>

    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.fixed_costs") %></p>
      <p class="text-2xl font-semibold text-primary">
        <%= data[:fixed_costs][:count] %>
      </p>
    </div>

    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.subscriptions") %></p>
      <p class="text-2xl font-semibold text-primary">
        <%= data[:subscriptions][:count] %>
      </p>
    </div>
  </div>

  <%# Potentially Unused Subscriptions Warning %>
  <% if data[:potentially_unused].any? %>
    <div class="bg-warning/10 border border-warning/30 rounded-xl p-5">
      <div class="flex items-center gap-2 mb-3">
        <%= icon("alert-triangle", class: "w-5 h-5 text-warning") %>
        <h4 class="text-sm font-medium text-warning">
          <%= t("reports.insights.recurring_costs.unused_title") %>
        </h4>
      </div>

      <p class="text-sm text-secondary mb-4">
        <%= t("reports.insights.recurring_costs.unused_description") %>
      </p>

      <div class="space-y-2">
        <% data[:potentially_unused].each do |unused| %>
          <div class="flex items-center justify-between p-3 bg-container rounded-lg">
            <div>
              <p class="font-medium text-primary"><%= unused[:recurring_transaction][:name] %></p>
              <p class="text-xs text-tertiary">
                <%= t("reports.insights.recurring_costs.last_used", days: unused[:days_inactive]) %>
              </p>
            </div>
            <div class="text-right">
              <p class="font-medium text-warning"><%= unused[:monthly_cost][:formatted] %>/mo</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Upcoming Bills %>
  <% if data[:upcoming_bills].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <div class="flex items-center gap-2 mb-4">
        <%= icon("calendar", class: "w-5 h-5 text-primary") %>
        <h4 class="text-sm font-medium text-secondary">
          <%= t("reports.insights.recurring_costs.upcoming_bills") %>
        </h4>
      </div>

      <div class="space-y-2">
        <% data[:upcoming_bills].first(5).each do |bill| %>
          <% urgency_class = bill[:days_until] <= 2 ? 'border-warning bg-warning/5' : 'border-secondary' %>

          <div class="flex items-center justify-between p-3 border rounded-lg <%= urgency_class %>">
            <div class="flex items-center gap-3">
              <div class="text-center">
                <p class="text-lg font-semibold text-primary"><%= Date.parse(bill[:date]).day %></p>
                <p class="text-xs text-tertiary"><%= Date.parse(bill[:date]).strftime("%b") %></p>
              </div>
              <div>
                <p class="font-medium text-primary"><%= bill[:name] %></p>
                <% if bill[:category] %>
                  <p class="text-xs text-tertiary"><%= bill[:category] %></p>
                <% end %>
              </div>
            </div>
            <div class="text-right">
              <p class="font-medium text-primary"><%= bill[:amount][:formatted] %></p>
              <p class="text-xs <%= bill[:days_until] <= 2 ? 'text-warning font-medium' : 'text-tertiary' %>">
                <% if bill[:days_until] == 0 %>
                  <%= t("reports.insights.recurring_costs.due_today") %>
                <% elsif bill[:days_until] == 1 %>
                  <%= t("reports.insights.recurring_costs.due_tomorrow") %>
                <% else %>
                  <%= t("reports.insights.recurring_costs.due_in_days", days: bill[:days_until]) %>
                <% end %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Fixed Costs Breakdown %>
  <% if data[:fixed_costs][:items].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center gap-2">
          <%= icon("home", class: "w-5 h-5 text-primary") %>
          <h4 class="text-sm font-medium text-secondary">
            <%= t("reports.insights.recurring_costs.fixed_costs_title") %>
          </h4>
        </div>
        <span class="text-sm font-medium text-primary"><%= data[:fixed_costs][:total][:formatted] %>/mo</span>
      </div>

      <div class="space-y-2">
        <% data[:fixed_costs][:items].first(6).each do |item| %>
          <div class="flex items-center justify-between py-2 border-b border-secondary/50 last:border-0">
            <div class="flex items-center gap-2">
              <span class="text-sm text-primary"><%= item[:name] %></span>
              <% if item[:category] %>
                <span class="text-xs px-1.5 py-0.5 bg-container rounded text-tertiary"><%= item[:category] %></span>
              <% end %>
            </div>
            <span class="font-medium text-primary"><%= item[:amount][:formatted] %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Subscriptions Breakdown %>
  <% if data[:subscriptions][:items].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center gap-2">
          <%= icon("repeat", class: "w-5 h-5 text-primary") %>
          <h4 class="text-sm font-medium text-secondary">
            <%= t("reports.insights.recurring_costs.subscriptions_title") %>
          </h4>
        </div>
        <span class="text-sm font-medium text-primary"><%= data[:subscriptions][:total][:formatted] %>/mo</span>
      </div>

      <%# Visual breakdown - simple chips %>
      <% if data[:subscriptions][:items].any? %>
        <div class="flex flex-wrap gap-2 mb-4">
          <% colors = ['bg-primary', 'bg-success', 'bg-warning', 'bg-destructive', 'bg-secondary'] %>

          <% data[:subscriptions][:items].first(8).each_with_index do |item, index| %>
            <% color = colors[index % colors.length] %>

            <div class="px-3 py-1.5 <%= color %> bg-opacity-80 rounded-full text-xs text-white font-medium"
                 title="<%= item[:monthly_amount][:formatted] %>/mo">
              <%= item[:name].truncate(15) %>
            </div>
          <% end %>
        </div>
      <% end %>

      <details class="group">
        <summary class="text-sm text-secondary cursor-pointer hover:text-primary">
          <%= t("reports.insights.recurring_costs.show_all") %>
          <%= icon("chevron-down", class: "w-3 h-3 inline-block ml-1 transition-transform group-open:rotate-180") %>
        </summary>

        <div class="mt-3 space-y-2">
          <% data[:subscriptions][:items].each do |item| %>
            <div class="flex items-center justify-between py-2 border-b border-secondary/50 last:border-0">
              <div class="flex items-center gap-2">
                <span class="text-sm text-primary"><%= item[:name] %></span>
                <span class="text-xs text-tertiary">(<%= item[:frequency] %>)</span>
              </div>
              <span class="font-medium text-primary"><%= item[:monthly_amount][:formatted] %>/mo</span>
            </div>
          <% end %>
        </div>
      </details>
    </div>
  <% end %>

  <%# Insights %>
  <% if data[:insights].present? %>
    <div class="space-y-2">
      <% data[:insights].each do |insight| %>
        <% bg_class = case insight[:severity]
          when :positive then "bg-success/10 border-success/30"
          when :warning then "bg-warning/10 border-warning/30"
          when :alert then "bg-destructive/10 border-destructive/30"
          else "bg-surface-inset border-secondary"
        end %>
        <% icon_class = case insight[:severity]
          when :positive then "text-success"
          when :warning then "text-warning"
          when :alert then "text-destructive"
          else "text-secondary"
        end %>
        <% icon_name = case insight[:severity]
          when :positive then "check-circle"
          when :warning then "alert-triangle"
          when :alert then "alert-circle"
          else "info"
        end %>

        <div class="flex items-start gap-3 p-3 rounded-lg border <%= bg_class %>">
          <%= icon(icon_name, class: "w-5 h-5 mt-0.5 #{icon_class}") %>
          <p class="text-sm text-primary"><%= insight[:message] %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
