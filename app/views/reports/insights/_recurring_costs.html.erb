<% return unless data.present? %>

<div class="space-y-8">
  <%# Summary Stats %>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
    <div>
      <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.monthly_total") %></p>
      <p class="text-2xl font-semibold text-primary"><%= data[:monthly_total][:formatted] %></p>
    </div>
    <div>
      <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.annual_total") %></p>
      <p class="text-2xl font-semibold text-secondary"><%= data[:annual_total][:formatted] %></p>
    </div>
    <div>
      <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.fixed_costs") %></p>
      <p class="text-2xl font-semibold text-primary"><%= data[:fixed_costs][:count] %></p>
    </div>
    <div>
      <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.subscriptions") %></p>
      <p class="text-2xl font-semibold text-primary"><%= data[:subscriptions][:count] %></p>
    </div>
  </div>

  <%# Potentially Unused Subscriptions Warning %>
  <% if data[:potentially_unused].any? %>
    <div class="border-l-2 border-warning pl-4 py-2">
      <div class="flex items-center gap-2 mb-2">
        <%= icon("alert-triangle", class: "w-4 h-4 text-warning") %>
        <p class="text-sm font-medium text-warning"><%= t("reports.insights.recurring_costs.unused_title") %></p>
      </div>
      <p class="text-xs text-secondary mb-3"><%= t("reports.insights.recurring_costs.unused_description") %></p>

      <div class="space-y-2">
        <% data[:potentially_unused].each do |unused| %>
          <div class="flex items-center justify-between text-sm">
            <div>
              <span class="font-medium text-primary"><%= unused[:recurring_transaction][:name] %></span>
              <span class="text-xs text-tertiary ml-2">
                <%= t("reports.insights.recurring_costs.last_used", days: unused[:days_inactive]) %>
              </span>
            </div>
            <span class="font-medium text-warning"><%= unused[:monthly_cost][:formatted] %>/mo</span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Upcoming Bills %>
  <% if data[:upcoming_bills].any? %>
    <div>
      <p class="text-sm text-secondary mb-3"><%= t("reports.insights.recurring_costs.upcoming_bills") %></p>

      <div class="space-y-2">
        <% data[:upcoming_bills].first(5).each do |bill| %>
          <% urgent = bill[:days_until] <= 2 %>

          <div class="flex items-center justify-between py-2 <%= urgent ? 'text-warning' : '' %>">
            <div class="flex items-center gap-3">
              <div class="text-center w-10">
                <p class="text-lg font-semibold <%= urgent ? 'text-warning' : 'text-primary' %>"><%= Date.parse(bill[:date]).day %></p>
                <p class="text-xs text-tertiary"><%= Date.parse(bill[:date]).strftime("%b") %></p>
              </div>
              <span class="font-medium text-primary"><%= bill[:name] %></span>
            </div>
            <div class="text-right">
              <span class="font-medium text-primary"><%= bill[:amount][:formatted] %></span>
              <% if bill[:days_until] == 0 %>
                <span class="text-xs text-warning ml-2"><%= t("reports.insights.recurring_costs.due_today") %></span>
              <% elsif bill[:days_until] == 1 %>
                <span class="text-xs text-warning ml-2"><%= t("reports.insights.recurring_costs.due_tomorrow") %></span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Fixed Costs & Subscriptions - Combined list %>
  <% all_recurring = (data[:fixed_costs][:items] + data[:subscriptions][:items]).sort_by { |i| -(i[:amount][:amount] || i[:monthly_amount][:amount]) } %>
  <% if all_recurring.any? %>
    <div>
      <div class="flex items-center justify-between mb-3">
        <p class="text-sm text-secondary">All Recurring Costs</p>
        <p class="text-sm font-medium text-primary"><%= data[:monthly_total][:formatted] %>/mo</p>
      </div>

      <div class="divide-y divide-secondary/20">
        <% all_recurring.first(10).each do |item| %>
          <div class="flex items-center justify-between py-2 text-sm">
            <span class="text-primary"><%= item[:name] %></span>
            <span class="font-medium text-primary"><%= (item[:amount] || item[:monthly_amount])[:formatted] %></span>
          </div>
        <% end %>
      </div>

      <% if all_recurring.length > 10 %>
        <details class="mt-2">
          <summary class="text-xs text-secondary cursor-pointer hover:text-primary">
            <%= t("reports.insights.recurring_costs.show_all") %> (<%= all_recurring.length - 10 %> more)
          </summary>
          <div class="divide-y divide-secondary/20 mt-2">
            <% all_recurring.drop(10).each do |item| %>
              <div class="flex items-center justify-between py-2 text-sm">
                <span class="text-primary"><%= item[:name] %></span>
                <span class="font-medium text-primary"><%= (item[:amount] || item[:monthly_amount])[:formatted] %></span>
              </div>
            <% end %>
          </div>
        </details>
      <% end %>
    </div>
  <% end %>

  <%# Insights %>
  <% if data[:insights].present? %>
    <div class="space-y-2 pt-4 border-t border-secondary/20">
      <% data[:insights].each do |insight| %>
        <% colors = { positive: "text-success", warning: "text-warning", alert: "text-destructive", info: "text-secondary" } %>
        <% icons = { positive: "check-circle", warning: "alert-triangle", alert: "alert-circle", info: "info" } %>

        <div class="flex items-start gap-2 text-sm">
          <%= icon(icons[insight[:severity]] || "info", class: "w-4 h-4 mt-0.5 flex-shrink-0 #{colors[insight[:severity]] || 'text-secondary'}") %>
          <p class="text-primary"><%= insight[:message] %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
