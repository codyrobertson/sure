<% return unless data.present? %>

<div class="space-y-6">
  <%# Summary Stats Card %>
  <div class="bg-container rounded-xl shadow-border-xs p-5">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <div>
        <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.monthly_total") %></p>
        <p class="text-2xl font-semibold text-primary"><%= data[:monthly_total][:formatted] %></p>
      </div>
      <div>
        <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.annual_total") %></p>
        <p class="text-2xl font-semibold text-secondary"><%= data[:annual_total][:formatted] %></p>
      </div>
      <div>
        <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.fixed_costs") %></p>
        <p class="text-2xl font-semibold text-primary"><%= data[:fixed_costs][:count] %></p>
      </div>
      <div>
        <p class="text-sm text-secondary mb-1"><%= t("reports.insights.recurring_costs.subscriptions") %></p>
        <p class="text-2xl font-semibold text-primary"><%= data[:subscriptions][:count] %></p>
      </div>
    </div>
  </div>

  <%# Potentially Unused Subscriptions Warning %>
  <% if data[:potentially_unused].any? %>
    <div class="bg-warning/10 border border-warning/30 rounded-xl p-5">
      <div class="flex items-center gap-2 mb-3">
        <%= icon("alert-triangle", class: "w-5 h-5 text-warning") %>
        <h4 class="text-sm font-medium text-warning"><%= t("reports.insights.recurring_costs.unused_title") %></h4>
      </div>
      <p class="text-xs text-secondary mb-4"><%= t("reports.insights.recurring_costs.unused_description") %></p>

      <table class="w-full text-sm">
        <tbody>
          <% data[:potentially_unused].each do |unused| %>
            <tr class="border-b border-warning/20 last:border-0">
              <td class="py-2 font-medium text-primary"><%= unused[:recurring_transaction][:name] %></td>
              <td class="py-2 text-subdued text-right">
                <%= t("reports.insights.recurring_costs.last_used", days: unused[:days_inactive]) %>
              </td>
              <td class="py-2 font-medium text-warning text-right w-28"><%= unused[:monthly_cost][:formatted] %>/mo</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <%# Upcoming Bills Card %>
  <% if data[:upcoming_bills].any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <div class="flex items-center gap-2 mb-4">
        <%= icon("calendar", class: "w-5 h-5 text-primary") %>
        <h4 class="text-sm font-medium text-primary"><%= t("reports.insights.recurring_costs.upcoming_bills") %></h4>
      </div>

      <table class="w-full text-sm">
        <tbody>
          <% data[:upcoming_bills].first(5).each do |bill| %>
            <% urgent = bill[:days_until] <= 2 %>
            <tr class="border-b border-secondary/20 last:border-0">
              <td class="py-3 w-14">
                <div class="text-center">
                  <p class="text-lg font-semibold <%= urgent ? 'text-warning' : 'text-primary' %>"><%= Date.parse(bill[:date]).day %></p>
                  <p class="text-xs text-subdued"><%= Date.parse(bill[:date]).strftime("%b") %></p>
                </div>
              </td>
              <td class="py-3 font-medium text-primary"><%= bill[:name] %></td>
              <td class="py-3 text-right">
                <p class="font-medium text-primary"><%= bill[:amount][:formatted] %></p>
                <% if bill[:days_until] == 0 %>
                  <p class="text-xs text-warning"><%= t("reports.insights.recurring_costs.due_today") %></p>
                <% elsif bill[:days_until] == 1 %>
                  <p class="text-xs text-warning"><%= t("reports.insights.recurring_costs.due_tomorrow") %></p>
                <% else %>
                  <p class="text-xs text-subdued"><%= t("reports.insights.recurring_costs.due_in_days", days: bill[:days_until]) %></p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <%# All Recurring Costs Card %>
  <% all_recurring = (data[:fixed_costs][:items] + data[:subscriptions][:items]).sort_by { |i| -(i[:amount][:amount] || i[:monthly_amount][:amount]) } %>
  <% if all_recurring.any? %>
    <div class="bg-container rounded-xl shadow-border-xs p-5">
      <div class="flex items-center justify-between mb-4">
        <h4 class="text-sm font-medium text-primary"><%= t("reports.insights.recurring_costs.all_recurring_costs") %></h4>
        <span class="text-sm font-medium text-primary"><%= data[:monthly_total][:formatted] %>/mo</span>
      </div>

      <table class="w-full text-sm">
        <tbody>
          <% all_recurring.first(10).each do |item| %>
            <tr class="border-b border-secondary/20 last:border-0">
              <td class="py-2.5 text-primary"><%= item[:name] %></td>
              <td class="py-2.5 font-medium text-primary text-right"><%= (item[:amount] || item[:monthly_amount])[:formatted] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if all_recurring.length > 10 %>
        <details class="mt-3">
          <summary class="text-xs text-secondary cursor-pointer hover:text-primary">
            <%= t("reports.insights.recurring_costs.show_all") %> (<%= all_recurring.length - 10 %> more)
          </summary>
          <table class="w-full text-sm mt-2">
            <tbody>
              <% all_recurring.drop(10).each do |item| %>
                <tr class="border-b border-secondary/20 last:border-0">
                  <td class="py-2.5 text-primary"><%= item[:name] %></td>
                  <td class="py-2.5 font-medium text-primary text-right"><%= (item[:amount] || item[:monthly_amount])[:formatted] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </details>
      <% end %>
    </div>
  <% end %>

  <%# Insights %>
  <% if data[:insights].present? %>
    <div class="space-y-2">
      <% data[:insights].each do |insight| %>
        <% colors = { positive: "text-success", warning: "text-warning", alert: "text-destructive", info: "text-secondary" } %>
        <% icons = { positive: "check-circle", warning: "alert-triangle", alert: "alert-circle", info: "info" } %>

        <div class="flex items-start gap-2 text-sm">
          <%= icon(icons[insight[:severity]] || "info", class: "w-4 h-4 mt-0.5 flex-shrink-0 #{colors[insight[:severity]] || 'text-secondary'}") %>
          <p class="text-primary"><%= insight[:message] %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
