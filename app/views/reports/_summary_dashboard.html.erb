<%# Hero metric - Net Savings as the main focus %>
<div class="space-y-8">
  <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-6">
    <%# Primary metric - Net Savings (like the â‚¬19,546.50 in reference) %>
    <div>
      <p class="text-sm text-secondary mb-1"><%= t("reports.summary.net_savings") %></p>
      <p class="text-4xl lg:text-5xl font-semibold tracking-tight <%= metrics[:net_savings] >= 0 ? 'text-success' : 'text-destructive' %>">
        <%= metrics[:net_savings].format %>
      </p>
      <p class="text-sm text-tertiary mt-1"><%= t("reports.summary.income_minus_expenses") %></p>
    </div>

    <%# Secondary metrics - Income, Expenses, Budget %>
    <div class="flex flex-wrap gap-8 lg:gap-12">
      <div>
        <p class="text-sm text-secondary mb-1"><%= t("reports.summary.total_income") %></p>
        <p class="text-2xl font-semibold text-success"><%= metrics[:current_income].format %></p>
        <% if metrics[:income_change] %>
          <p class="text-xs mt-1 <%= metrics[:income_change] >= 0 ? 'text-success' : 'text-destructive' %>">
            <%= metrics[:income_change] >= 0 ? '+' : '' %><%= metrics[:income_change] %>% <%= t("reports.summary.vs_previous") %>
          </p>
        <% end %>
      </div>

      <div>
        <p class="text-sm text-secondary mb-1"><%= t("reports.summary.total_expenses") %></p>
        <p class="text-2xl font-semibold text-destructive"><%= metrics[:current_expenses].format %></p>
        <% if metrics[:expense_change] %>
          <p class="text-xs mt-1 <%= metrics[:expense_change] <= 0 ? 'text-success' : 'text-destructive' %>">
            <%= metrics[:expense_change] >= 0 ? '+' : '' %><%= metrics[:expense_change] %>% <%= t("reports.summary.vs_previous") %>
          </p>
        <% end %>
      </div>

      <% if metrics[:budget_percent] %>
        <div>
          <p class="text-sm text-secondary mb-1"><%= t("reports.summary.budget_performance") %></p>
          <p class="text-2xl font-semibold <%= metrics[:budget_percent] >= 100 ? 'text-destructive' : metrics[:budget_percent] >= 80 ? 'text-warning' : 'text-primary' %>">
            <%= metrics[:budget_percent] %>%
          </p>
          <div class="w-24 h-1.5 bg-secondary/20 rounded-full mt-2 overflow-hidden">
            <div class="h-full <%= metrics[:budget_percent] >= 100 ? 'bg-destructive' : metrics[:budget_percent] >= 80 ? 'bg-warning' : 'bg-success' %> rounded-full"
                 style="width: <%= [metrics[:budget_percent], 100].min %>%"></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
