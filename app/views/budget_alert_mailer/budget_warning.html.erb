<h1><%= t(".greeting", name: @user.first_name.presence || @user.display_name) %></h1>

<p><%= t(".intro", budget_name: @budget.name) %></p>

<table style="width: 100%; border-collapse: collapse; margin: 16px 0;">
  <thead>
    <tr style="border-bottom: 2px solid #e2e8f0;">
      <th style="text-align: left; padding: 8px 0; color: #64748b; font-size: 14px;"><%= t(".category_header") %></th>
      <th style="text-align: right; padding: 8px 0; color: #64748b; font-size: 14px;"><%= t(".budgeted_header") %></th>
      <th style="text-align: right; padding: 8px 0; color: #64748b; font-size: 14px;"><%= t(".spent_header") %></th>
      <th style="text-align: right; padding: 8px 0; color: #64748b; font-size: 14px;"><%= t(".remaining_header") %></th>
      <th style="text-align: right; padding: 8px 0; color: #64748b; font-size: 14px;"><%= t(".percent_header") %></th>
    </tr>
  </thead>
  <tbody>
    <% @near_limit_categories.each do |bc| %>
      <tr style="border-bottom: 1px solid #e2e8f0;">
        <td style="padding: 12px 0; font-weight: 500;"><%= bc.name %></td>
        <td style="text-align: right; padding: 12px 0;"><%= format_money(bc.budgeted_spending_money) %></td>
        <td style="text-align: right; padding: 12px 0;"><%= format_money(bc.actual_spending_money) %></td>
        <td style="text-align: right; padding: 12px 0; color: #d97706; font-weight: 600;"><%= format_money(bc.available_to_spend_money) %></td>
        <td style="text-align: right; padding: 12px 0; color: #d97706; font-weight: 600;"><%= number_to_percentage(bc.percent_of_budget_spent, precision: 0) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= t(".action_prompt") %></p>

<%= link_to t(".cta"), budgets_url, class: "button" %>

<p class="footer"><%= t(".footer") %></p>
